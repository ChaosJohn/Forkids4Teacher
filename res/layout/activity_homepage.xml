<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context=".Homepage" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="17"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            android:gravity="center" >

            <ImageView
                android:id="@+id/homepage_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/avatar_empty" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3"
            android:gravity="center" >

            <TextView
                android:id="@+id/homepage_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="胡一菲 老师"
                android:textColor="#424241"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="34"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/homepage_diary_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:src="@drawable/homepage_journal_btn_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="活动日志"
                    android:textColor="#424241"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/homepage_moments_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:src="@drawable/homepage_moments_btn_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="精彩瞬间"
                    android:textColor="#424241"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/homepage_weekly_recipe_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:src="@drawable/homepage_weekly_recipe_btn_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="每周食谱"
                    android:textColor="#424241"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/homepage_teaching_plan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:src="@drawable/homepage_teaching_plan_btn_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="教学计划"
                    android:textColor="#424241"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="15"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/homepage_messages_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@drawable/homepage_linearlayout_background_split_top_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:paddingLeft="30dp"
                android:paddingRight="13dp" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="28"
                    android:gravity="center_vertical"
                    android:text="通知公告"
                    android:textColor="#424241"
                    android:textSize="30sp" />

                <Button
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:clickable="false"
                    android:background="@drawable/homepage_arrow_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/homepage_bus_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@drawable/homepage_linearlayout_background_split_middle_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:clickable="true"
                android:paddingRight="13dp" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="28"
                    android:gravity="center_vertical"
                    android:text="校车通知"
                    android:textColor="#424241"
                    android:textSize="30sp" />

                <Button
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:clickable="false"
                    android:background="@drawable/homepage_arrow_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/homepage_tips_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@drawable/homepage_linearlayout_background_split_bottom_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:clickable="true"
                android:paddingRight="13dp" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="28"
                    android:gravity="center_vertical"
                    android:text="育英知识"
                    android:textColor="#424241"
                    android:textSize="30sp" />

                <Button
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:clickable="false"
                    android:background="@drawable/homepage_arrow_normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="13dp"
            android:layout_weight="9"
            android:gravity="center" >

            <ImageView
                android:id="@+id/homepage_attendance_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/homepage_attendance_btn_selector" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
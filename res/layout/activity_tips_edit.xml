<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DiaryDetailsActivity" >

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >
      

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/back_btn_selector_red" />

        <TextView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:text="育英知识"
            android:textColor="#E6827C"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ok_normal" />
    </LinearLayout>
     <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEE0E0"
        android:orientation="vertical"
        android:paddingLeft="9dp"
        android:paddingRight="9dp" >

        <EditText
            android:id="@+id/titleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请添加标题"
            android:background="@null"
            android:textColor="#ABA1A1"
            android:textSize="20sp" />
        
        <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C4C5C8"/>
        

       

            <EditText
                android:id="@+id/contentInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:textColor="#A79D9D"
                android:textSize="16sp" 
                android:background="@null"
                android:hint="请添加育英知识内容"/>
        
    </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >
            
         <ImageView
            android:id="@+id/camera_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/camera_normal" />
          <ImageView
            android:id="@+id/photo_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/photo_normal" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8" />

       

        
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<!-- 圆角 白色背景 灰色边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#000000" />


            <stroke
                android:width="1dp"
                android:color="#ff000000" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="2dp">
        <shape>
            <solid android:color="#EEEEEE" />

            <stroke
                android:width="1dp"
                android:color="#ffeeeeee" />
        </shape>
    </item>

</layer-list>